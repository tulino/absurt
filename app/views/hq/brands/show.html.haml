
- content_for :toolbar do
  = link_to edit_hq_brand_path(@brand), class: 'btn btn-default' do
    %i.icon-pencil
    = t('action_button.edit')
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Brand.model_name.human)
  .panel-body
    = show_for @brand do |s|
      = s.attribute :id
      = s.attribute :name
      = s.attribute :created_at
      = s.attribute :updated_at

